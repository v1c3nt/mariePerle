{% for article in articles %}
<div class="article col-10 offset-1 col-lg-5 offset-lg-0">
	<div class="left-article">

		{# <div class="prix-wrapper">
			{% if article.remise %}
				<div class="old-prix">
					{{ article.prix|format_currency('EUR', format_width) }}

				</div>
				<div class="remise">
					{{ article.remise }}
				</div>
				<div class="new-prix">
